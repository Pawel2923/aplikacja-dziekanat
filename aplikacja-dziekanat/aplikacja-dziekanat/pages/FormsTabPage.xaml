<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aplikacja_dziekanat.pages.FormsTabPage"
            xmlns:pages="clr-namespace:aplikacja_dziekanat.pages"
             MasterBehavior="Popover">
    
    <MasterDetailPage.Master>
        <ContentPage Padding="10"  Title="master">
            <ContentPage.Content>
                <StackLayout Margin="5,30,5,5">


                    <Button Text="Plan Zajeć"  Clicked="Handle_Clicked"></Button>

                    
                    <Button Text="Ogłoszenia"  Clicked="Handle_Clicked1"></Button>


                    <Button Text="Pogoda "  Clicked="Handle_Clicked2"  ></Button>

                    
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
        
</MasterDetailPage.Master>

   
    <MasterDetailPage.Detail>
        <TabbedPage x:Name="MainTabbedPage">
            <TabbedPage.Children>
        <pages:PlanZajec Title="Plan Zajęc" />
        <pages:Ogloszenia Title="Ogłoszenia"/>
        <pages:Pogoda Title="Pogoda" />
        
    </TabbedPage.Children>
    </TabbedPage>
        
        

    </MasterDetailPage.Detail> 
    

</MasterDetailPage>
  